# OpenAI API Key (Required - for GPT-4, TTS, and Whisper STT)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Clerk Authentication (Required for user auth)
# Get your keys at: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-key-here
CLERK_SECRET_KEY=sk_test_your-key-here

# Clerk URLs (Optional - defaults shown)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Deepgram API Key (Optional - alternative STT provider)
# Get your key at: https://console.deepgram.com
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# ElevenLabs API Key (Optional - for enhanced TTS voices)
# Get your key at: https://elevenlabs.io
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Supabase Configuration (Required for data persistence)
# Get your keys at: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

